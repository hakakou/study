<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiStudyApp.Views.DefaultPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModel="clr-namespace:MauiStudyApp.ViewModels;assembly=MauiStudyApp"
    x:DataType="{x:Type viewModel:DefaultViewModel }"
    Title="Welcome"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="Page">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Pages" FontSize="22"/>
        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Pages}" Spacing="5">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="{x:Type viewModel:PageItem}">
                    <Button Text="{Binding Title}"
                            Command="{Binding Source={x:Reference Page}, Path=BindingContext.OpenPageCommand}"
                            CommandParameter="{Binding .}"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>