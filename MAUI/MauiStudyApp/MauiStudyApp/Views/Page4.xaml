<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiStudyApp.Views.Page4"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dx="http://schemas.devexpress.com/maui"
    xmlns:viewModel="clr-namespace:MauiStudyApp.ViewModels;assembly=MauiStudyApp"
    x:DataType="{x:Type viewModel:Page4ViewModel}"
    Title="Welcome"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:behaviors="clr-namespace:MauiStudyApp.Behaviors"
    xmlns:views="clr-namespace:MauiStudyApp.Views;assembly=MauiStudyApp"

    BindingContext="{behaviors:DISource Type={x:Type viewModel:Page4ViewModel}}"

    x:Name="Page">

    <ContentPage.Resources>
        <ResourceDictionary>
            <behaviors:DISource x:Key="ViewModelSource" Type="{x:Type viewModel:ReplierViewModel}"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="60, *" ColumnDefinitions="*,*">
        <views:AlertGeneratorView Grid.ColumnSpan="2"/>
        <Label Text="{behaviors:Translate TestTest}" />
    </Grid>



</ContentPage>