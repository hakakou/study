<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStudyApp.Views.AlertGeneratorView"
             xmlns:vm="clr-namespace:MauiStudyApp.ViewModels;assembly=MauiStudyApp"
             x:DataType="{x:Type vm:AlertGeneratorViewModel}">
    <ContentView.BindingContext>
        <vm:AlertGeneratorViewModel/>
    </ContentView.BindingContext>
    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,*">
        <Button Text="Send Alert" Grid.Column="0"
            Command="{Binding GenerateAlertCommand}"/>
        <Button Text="Request Alert (Async)" Grid.Column="1"
            Command="{Binding RequestAlertCommand}"/>

        <Entry Text="{Binding AlertText, Mode=TwoWay}" Grid.Row="1" Grid.ColumnSpan="2" />
    </Grid>
</ContentView>
