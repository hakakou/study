<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             HorizontalOptions="Fill" HeightRequest="100"
             x:Class="MauiStudyApp2.EditableCard">
    <Border StrokeShape="RoundRectangle 10,10,10,10" StrokeThickness="0">
        <Border.Shadow>
            <Shadow Brush="LightGray" Offset="20,20" Radius="20" Opacity="0.8" />
        </Border.Shadow>
        <Grid BackgroundColor="LightGray">
            <Entry x:Name="editor" Text="{Binding Text}" IsReadOnly="True" />
            <Button x:Name="editButton" Text="Edit" Clicked="OnEditButtonClicked" 
                    HorizontalOptions="End" VerticalOptions="End" WidthRequest="100" HeightRequest="30" Padding="0"/>
        </Grid>
    </Border>
</ContentView>
